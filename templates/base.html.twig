<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="/css/messages.css"/>
            <link rel="stylesheet" href="/css/form.css"/>
            <link rel="stylesheet" href="/css/tabular.css"/>
            <link rel="stylesheet" href="/css/control.css"/>
            {% block more_stylesheets %}{% endblock %}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="/js/expiring-flash-divs.js"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block flash %}
                {% for message in app.flashes('note') %}
                    <div class="flash-note">{{ message }}</div>
                {% endfor %}
            {% endblock %}
{% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_logout') }}">Logout</a>
        {% block profile %}<a href="{{ path('profile_show') }}">Profile</a>{% endblock %}
{% else %}
        {% block login %}<a href="{{ path('login') }}">Login</a>{% endblock %}
{% endif %}
        {% block home %}<a href="{{ path('index') }}">Return home</a>{% endblock %}
        {% block bodyproper %}
        {% endblock %}
        {% endblock %}
    </body>
</html>
